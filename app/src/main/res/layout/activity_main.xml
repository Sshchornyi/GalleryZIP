<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150sp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100sp"
            android:fontFamily="@font/libre_franklin"
            android:text="@string/str_select_action"
            android:textSize="25sp"

            />

        <Button
            android:id="@+id/compress_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:fontFamily="@font/libre_franklin"
            android:text="@string/str_compress"
            style="@style/ButtonsStyle"
            android:textSize="20sp" />

        <Button
            android:id="@+id/archive_btn"
            style="@style/ButtonsStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:fontFamily="@font/libre_franklin"
            android:text="@string/str_archive"
            android:textSize="20sp" />

        <Button
            android:id="@+id/unzip_btn"
            style="@style/ButtonsStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/libre_franklin"
            android:text="@string/str_decompress"
            android:textSize="20sp"
            />



    </LinearLayout>


</LinearLayout>
