<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZipSelectionTransitive">

    <TextView
        android:id="@+id/selected_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/libre_franklin"
        android:text="@string/selected_images"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continue_btn_file_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/Ok_str"
        style="@style/ButtonsStyle"
        android:fontFamily="@font/libre_franklin"

        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView

        android:id="@+id/back_btn_file_selector"
        style="@style/BackButton"
        android:layout_width="77dp"
        android:layout_height="68dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:padding="5sp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>